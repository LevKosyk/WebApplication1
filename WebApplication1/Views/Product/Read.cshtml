@model IEnumerable<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "Read Page";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4">Product List</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td><a href="/product/description/@item.Id" class="btn btn-link">View</a></td>
                        <td>
                            <a href="/product/delete/@item.Id" class="btn btn-danger">Delete</a>
                            <a href="/product/update/@item.Id" class="btn btn-warning">Update</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>