@model WebApplication1.Models.Product
@{
    ViewData["Title"] = "Update Page";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4">Update Product</h2>
    <form asp-action="Update" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="text" class="form-control" id="price" name="price" required value="@Model.Price" />
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" class="form-control" id="description" name="description" required value="@Model.Description" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/home/index" class="btn btn-secondary">Cancel</a>
    </form>
</div>