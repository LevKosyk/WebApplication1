@model WebApplication1.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Page";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4">Delete Product</h2>
    <form asp-action="Delete" asp-controller="Product" method="post">
        <div class="form-group">
            <label for="id">Id:</label>
            <p class="form-control-plaintext" id="name" asp-for="Id" >@Model.Id</p>
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <p class="form-control-plaintext" asp-for="Name">@Model.Name</p>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <p class="form-control-plaintext">@Model.Price</p>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <p class="form-control-plaintext">@Model.Description</p>
        </div>

        <div class="alert alert-warning" role="alert">
            Are you sure you want to delete this product?
        </div>

        <div>
            <a href="/home/index" class="btn btn-secondary">Close</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>

</div>